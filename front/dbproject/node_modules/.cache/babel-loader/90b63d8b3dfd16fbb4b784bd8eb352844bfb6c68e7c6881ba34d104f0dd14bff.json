078/api/manage', { s_number: request.s_number, h_number: request.h_number, F_level: request.f_level, L_level: request.l_level, reason: request.reason, status: '拒绝' })\r\n        .then(response => {\r\n          this.fetchRequests()\r\n        })\r\n        .catch(error => {\r\n          console.error(error)\r\n        })\r\n    },\r\n    batchApprove() {\r\n      const selectedRequests = this.pendingRequests.filter(request => request.selected)\r\n      selectedRequests.forEach(request => {\r\n        this.approveRequest(request)\r\n      })\r\n    },\r\n    batchReject() {\r\n      const selectedRequests = this.pendingRequests.filter(request => request.selected)\r\n      selectedRequests.forEach(request => {\r\n        this.rejectRequest(request)\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n"],"mappings":";AAmGA,OAAOA,KAAI,MAAO,mBAAmB;AAErC,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,eAAe,EAAE,EAAE;MAAE;MACrBC,gBAAgB,EAAE,EAAE;MACpBC,gBAAgB,EAAE,EAAE;MACpBC,SAAS,EAAE;IACb;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,aAAa,CAAC;EACrB,CAAC;EACDC,OAAO,EAAE;IACPC,eAAeA,CAAA,EAAG;MAChB,IAAI,CAACP,eAAe,CAACQ,OAAO,CAACC,OAAM,IAAK;QACtCA,OAAO,CAACC,QAAO,GAAI,IAAI,CAACP,SAAQ;MAClC,CAAC;IACH,CAAC;IACDE,aAAaA,CAAA,EAAG;MACdP,KAAK,CAACa,GAAG,CAAC,kCAAkC,EACzCC,IAAI,CAACC,QAAO,IAAK;QAChB,MAAMb,eAAc,GAAI,EAAC,EAAE;QAC3B,MAAMC,gBAAe,GAAI,EAAC,EAAE;QAC5B,MAAMC,gBAAe,GAAI,EAAC,EAAE;QAC5BW,QAAQ,CAACd,IAAI,CAACS,OAAO,CAACC,OAAM,IAAK;UAC/B,IAAIA,OAAO,CAACK,MAAK,KAAM,KAAK,EAAE;YAC5Bd,eAAe,CAACe,IAAI,CAACN,OAAO;UAC9B,OAAO,IAAIA,OAAO,CAACK,MAAK,KAAM,IAAI,EAAE;YAClCb,gBAAgB,CAACc,IAAI,CAACN,OAAO;UAC/B,OAAO,IAAIA,OAAO,CAACK,MAAK,KAAM,IAAI,EAAE;YAClCZ,gBAAgB,CAACa,IAAI,CAACN,OAAO;UAC/B;QACF,CAAC;QACD,IAAI,CAACT,eAAc,GAAIA,eAAc;QACrC,IAAI,CAACC,gBAAe,GAAIA,gBAAe;QACvC,IAAI,CAACC,gBAAe,GAAIA,gBAAe;MACzC,CAAC,EACAc,KAAK,CAACC,KAAI,IAAK;QACdC,OAAO,CAACD,KAAK,CAACA,KAAK;MACrB,CAAC;IACL,CAAC;IACDE,cAAcA,CAACV,OAAO,EAAE;MACtBX,KAAK,CAACsB,IAAI,CAAC,kCAAkC,EAAE;QAAEC,QAAQ,EAAEZ,OAAO,CAACY,QAAQ;